From 2a30b6193ce5a1780fee86d7279d5b3889fd24c2 Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Wed, 15 Jul 2015 20:04:13 +0100
Subject: [PATCH] Force dbginfo packages to use "debug" component, to co-exist
 in repo

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 pisi/constants.py        | 1 +
 pisi/operations/build.py | 2 +-
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/pisi/constants.py b/pisi/constants.py
index b753685..d001e9a 100644
--- a/pisi/constants.py
+++ b/pisi/constants.py
@@ -103,6 +103,7 @@ class Constants:
         self.__c.system_devel_component = "system.devel"
         self.__c.devels_component = "programming.devel"
         self.__c.docs_component = "programming.docs"
+        self.__c.debug_component = "debug"
 
         #file/directory permissions
         self.__c.umask = 0022
diff --git a/pisi/operations/build.py b/pisi/operations/build.py
index ba22916..e88a43d 100644
--- a/pisi/operations/build.py
+++ b/pisi/operations/build.py
@@ -904,7 +904,7 @@ class Builder:
         # FIXME: find a better way to deal with the summary and description constants.
         debug_package_obj.summary['en'] = u'Debug files for %s' % (package.name)
         debug_package_obj.description['en'] = u'Debug files for %s' % (package.name)
-        debug_package_obj.partOf = package.partOf
+        debug_package_obj.partOf = ctx.const.debug_component
 
         dependency = pisi.dependency.Dependency()
         dependency.package = package.name
